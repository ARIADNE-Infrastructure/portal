{
  "settings": {
    "index": {
      "analysis": {
        "normalizer": {
          "useLowercase": {
            "filter": [
              "lowercase"
            ],
            "type": "custom"
          }
        }
      }
    }
  },
  "mappings": {
    "dynamic": "false",
    "properties": {
      "authority": {
        "type": "nested",
        "properties": {
          "title": {
            "type": "text"
          },
          "citation": {
            "type": "text"
          },
          "url": {
            "type": "text"
          },
          "yearPublished": {
            "type": "date",
            "format": "year || date_optional_time"
          },
          "creator": {
            "properties": {
              "name": {
                "type": "text",
                "fields": {
                  " raw": {
                    "type": "keyword",
                    "normalizer": "useLowercase"
                  }
                }
              }
            }
          },
          "contributor": {
            "properties": {
              "name": {
                "type": "text",
                "fields": {
                  " raw": {
                    "type": "keyword",
                    "normalizer": "useLowercase"
                  }
                }
              }
            }
          },
          "authorityType": {
            "type": "text"
          },
          "id": {
            "type": "text"
          },
          "editorialNote": {
            "type": "text"
          }
        }
      },
      "periodType": {
        "type": "text"
      },
      "language": {
        "type": "text"
      },
      "languageTag": {
        "type": "keyword"
      },
      "id": {
        "type": "text"
      },
      "label": {
        "type": "text"
      },
      "localizedLabels": {
        "type": "nested",
        "properties": {
          "language": {
            "type": "text",
            "fields": {
              "raw": {
                "type": "keyword",
                "normalizer": "useLowercase"
              }
            }
          },
          "label": {
            "type": "text",
            "fields": {
              "raw": {
                "type": "keyword",
                "normalizer": "useLowercase"
              }
            }
          }
        }
      },
      "spatialCoverage": {
        "properties": {
          "id": {
            "type": "text"
          },
          "label": {
            "type": "text",
            "fields": {
              "raw": {
                "type": "keyword",
                "normalizer": "useLowercase"
              }
            }
          },
          "geopoint": {
            "type": "geo_point"
          }
        }
      },
      "broader": {
        "type": "text"
      },
      "spatialCoverageDescription": {
        "type": "keyword"
      },
      "note": {
        "type": "text"
      },
      "derivedFrom": {
        "type": "text"
      },

      "start": {
        "properties": {
          "year": {
            "type": "long"
          },
          "earliestYear": {
            "type": "long"
          },
          "latestYear": {
            "type": "long"
          },          
          "label": {
            "type": "keyword",
            "normalizer": "useLowercase"
          }
        }
      },
      "stop": {
        "properties": {
          "year": {
            "type": "long"
          },
          "earliestYear": {
            "type": "long"
          },
          "latestYear": {
            "type": "long"
          },
          "label": {
            "type": "keyword",
            "normalizer": "useLowercase"
          }
        }
      }
    }
  }
}
